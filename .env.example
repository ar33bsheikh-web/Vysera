# .env.example

# Shopify Storefront
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=vysera-demo.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_public_access_token

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_META_PIXEL_ID=
NEXT_PUBLIC_TIKTOK_PIXEL_ID=

# Algolia Search
ALGOLIA_APP_ID=
ALGOLIA_SEARCH_KEY=
ALGOLIA_ADMIN_KEY=
ALGOLIA_INDEX_PRODUCTS=vysera_products_dev

# Redis / Rate Limit (Optional)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Reviews DB (SQLite)
DATABASE_URL=file:./vysera.db

# Optional S3
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Feature Toggles
USE_MOCK_DATA=true
